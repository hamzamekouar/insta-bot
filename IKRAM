using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace TDI_PRA_J2_2017
{
    public partial class BrevetFrmQ4 : Form
    {
        TDI_PRA_J2_2017Entities db = new TDI_PRA_J2_2017Entities();

        public BrevetFrmQ4()
        {
            InitializeComponent();
        }

        
        private void Afficher(bool num,bool dateD,bool dateV, bool Invention,bool Inventeur)
        {
            if (num)
            {
                int numero = int.Parse(txtNumBrevet.Text);
                //d = db.Brevets.Where(x => x.num_brevet == numero).ToList();
                dataGridView1.DataSource = db.Brevets.Where(x => x.num_brevet == numero)
                                           .Select(x=>new { x.num_brevet,x.description_bre,x.date_depot,x.date_validation,x.num_invention
                                                           ,x.num_inventur}).ToList();
            }else if(dateV && dateD)
            {
                DateTime date1 = dateTimeDepot.Value;
                DateTime date2 = dateTimeValidation.Value;
                var brevets = db.Brevets.Where(
                                              x => x.date_depot.Value == date1.Date &&
                                                   x.date_validation.Value == date2.Date);
                dataGridView1.DataSource = brevets.Select(
                                                          x => new
                                                          {
                                                              x.num_brevet,x.description_bre,x.date_depot,
                                                              x.date_validation,x.num_invention,x.num_inventur
                                                          }
                                                          ).ToList();
            }
            else if (dateV)
            {
                DateTime date2 = dateTimeValidation.Value;
                var brevets = db.Brevets.Where(
                                              x => x.date_validation.Value == date2.Date);

                dataGridView1.DataSource = brevets.Select(
                                                          x => new
                                                          {
                                                              x.num_brevet,
                                                              x.description_bre,
                                                              x.date_depot,
                                                              x.date_validation,
                                                              x.num_invention,
                                                              x.num_inventur
                                                          }
                                                          ).ToList();
            }else if (dateD)
            {
                DateTime date1 = dateTimeDepot.Value;
                var brevets = db.Brevets.Where(
                                              x => x.date_depot.Value == date1.Date);
                dataGridView1.DataSource = brevets.Select(
                                                          x => new
                                                          {
                                                              x.num_brevet,
                                                              x.description_bre,
                                                              x.date_depot,
                                                              x.date_validation,
                                                              x.num_invention,
                                                              x.num_inventur
                                                          }
                                                          ).ToList();
            }else if (Inventeur)
            {
                int numero = int.Parse(comboInventeur.SelectedValue.ToString());

                var brevets = db.Brevets.Where(
                                              x => x.num_inventur==numero);
                dataGridView1.DataSource = brevets.Select(
                                                          x => new
                                                          {
                                                              x.num_brevet,
                                                              x.description_bre,
                                                              x.date_depot,
                                                              x.date_validation,
                                                              x.num_invention,
                                                              x.num_inventur
                                                          }
                                                          ).ToList();
            }else if(Invention)
            {

                int numero = int.Parse(comboInvention.SelectedValue.ToString());

                var brevets = db.Brevets.Where(
                                              x => x.num_invention == numero);
                dataGridView1.DataSource = brevets.Select(
                                                          x => new
                                                          {
                                                              x.num_brevet,
                                                              x.description_bre,
                                                              x.date_depot,
                                                              x.date_validation,
                                                              x.num_invention,
                                                              x.num_inventur
                                                          }
                                                          ).ToList();
            }
        }

        private void button1_Click(object sender, EventArgs e)
        {
            try
            {
                Afficher(NumBrevertCheck.Checked,
                         checkDateDepot.Checked,
                         checkDateValidation.Checked,
                         checkInvention.Checked,
                         checkInventeur.Checked);
            }
            catch (Exception ex)
            {
                MessageBox.Show(ex.Message);
            }
}

        private void BrevetFrmQ4_Load(object sender, EventArgs e)
        {
            comboInventeur.DataSource = db.Inventeurs.Select(x => new { Nom = x.nom, id = x.num_inventeur }).ToList();
            comboInventeur.DisplayMember = "Nom";
            comboInventeur.ValueMember = "id";

            comboInvention.DataSource = db.Invertions.Select(x => new {  id =x.num_invention}).ToList();
            comboInvention.DisplayMember = "id";
            comboInvention.ValueMember = "id";
        }
    }
}
